<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#651FFF"
        android:gravity="center|left"
        android:text="SelfProject4_4"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="선택을 시작하겠습니까?"
        android:textSize="25dp" />

    <Switch
        android:id="@+id/swStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="시작함"
        android:textStyle="bold"
        android:thumbTint="#00B8D4"
        android:trackTint="#18FFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="좋아하는 안드로이드 버전은?"
        android:textSize="25dp"
        android:visibility="invisible" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/btnOre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:buttonTint="#00B8D4"
            android:checked="false"
            android:text="오레오(8.0)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/btnvk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:buttonTint="#00B8D4"
            android:text="파이(9.0)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/btnQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:buttonTint="#00B8D4"
            android:text="Q(10.0)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_marginRight="150dp"
        android:scaleType="fitCenter"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#46079D"
        android:text="종료"
        android:textColor="#FBFBFB"
        android:textSize="20dp"
        android:visibility="visible"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btnRe"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#46079D"
        android:text="처음으로"
        android:textColor="#FBFBFB"
        android:textSize="20dp"
        android:visibility="visible"
        app:cornerRadius="5dp" />

</LinearLayout>